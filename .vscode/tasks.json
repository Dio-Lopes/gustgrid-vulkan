{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure (Windows)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-G",
                "Visual Studio 17 2022",
                "-A",
                "x64"
            ],
            "group": "build",
            "problemMatcher": [],
            "windows": {
                "presentation": {
                    "reveal": "always"
                }
            },
        },
        {
            "label": "CMake Build (Windows)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release"
            ],
            "group": "build",
            "problemMatcher": [],
            "windows": {
                "presentation": {
                    "reveal": "always"
                }
            },
        },
        {
            "label": "CMake Configure (macOS)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-G",
                "Ninja"
            ],
            "group": "build",
            "problemMatcher": [],
            "osx": {
                "presentation": {
                    "reveal": "always",
                }
            },
        },
        {
            "label": "CMake Build (macOS)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "problemMatcher": [],
            "osx": {
                "presentation": {
                    "reveal": "always"
                }
            },
        },
        {
            "label": "Configure and Build (Windows)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake Configure (Windows)",
                "CMake Build (Windows)"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Configure and Build (macOS)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake Configure (macOS)",
                "CMake Build (macOS)"
            ],
            "group": "build",
            "problemMatcher": []
        },
    ]
